{
  "name": "translate-readme",
  "version": "0.1.0",
  "private": true,
  "description": "Automate translation of your README.md files via Crowdin",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test-coverage": "jest --ci --reporters=jest-junit --reporters=default --coverage --coverageReporters=cobertura --coverageReporters=html",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crowdin/translate-readme"
  },
  "keywords": [
    "actions",
    "crowdin",
    "readme",
    "translation",
    "i18n",
    "internationalization",
    "localization",
    "l10n",
    "crowdin-action",
    "crowdin-github-action"
  ],
  "author": {
    "name": "Andrii Bodnar",
    "url": "https://github.com/andrii-bodnar"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@crowdin/crowdin-api-client": "^1.23.4",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/node": "^20.4.4",
    "@typescript-eslint/parser": "^6.1.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.45.0",
    "eslint-plugin-github": "^4.9.2",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
